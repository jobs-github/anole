FROM ubuntu:16.04

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    make \
    cmake \
    software-properties-common \
    vim \
    wget \
 && add-apt-repository -y ppa:max-c-lv/shadowsocks-libev \
 && apt-add-repository -y ppa:ubuntu-toolchain-r/test \
 && add-apt-repository -y ppa:nginx/stable \
 && apt-get update \
 && apt-get install -y --no-install-recommends \
    python \
    libssl-dev \
    libsodium-dev \
    shadowsocks-libev \
    nginx \
    gcc-5 \
    g++-5 \
    gdb \
    linux-tools-generic \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/* \
 && ln -sf /usr/bin/g++-5 /usr/bin/g++ \
 && ln -sf /usr/bin/gcc-5 /usr/bin/gcc

ENV CC gcc
ENV CXX g++