FROM ubuntu:devel

COPY third-party.tar.gz boost_1_73_0.tar.gz /tmp/

RUN cd /tmp \
 && tar -zxf third-party.tar.gz \
 && cd third-party \
 && chmod a+x build.sh \
 && ./build.sh \
 && cd /tmp \
 && tar -zxf boost_1_73_0.tar.gz \
 && cd boost_1_73_0 \
 && ./bootstrap.sh \
 && ./b2 install --prefix=/usr/local/boost_1_73_0 \
 && cd /tmp \
 && rm -rf boost_1_73_0 third-party third-party.tar.gz boost_1_73_0.tar.gz \
 && cd /usr/local \
 && tar -zcf elf_3rd.tar.gz zlog-1.2.15 boost_1_73_0 \
 && mv elf_3rd.tar.gz /tmp/