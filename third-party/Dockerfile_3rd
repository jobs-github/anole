FROM ubuntu:devel

COPY third-party.tar.gz /tmp

RUN cd /tmp \
 && tar -zxf third-party.tar.gz \
 && cd third-party \
 && chmod a+x build.sh \
 && ./build.sh \
 && cd .. \
 && rm -rf third-party \
 && cd /tmp \
 && rm -f third-party.tar.gz \
 && wget https://dl.bintray.com/boostorg/release/1.66.0/source/boost_1_66_0.tar.gz \
 && tar -zxf boost_1_66_0.tar.gz \
 && rm -f boost_1_66_0.tar.gz \
 && cd boost_1_66_0 \
 && ./bootstrap.sh \
 && ./b2 install --prefix=/usr/local/boost1.66 \
 && cd .. \
 && rm -rf boost_1_66_0 \
 && cd /usr/local \
 && tar -zcf elf_3rd.tar.gz include lib boost1.66 \
 && mv elf_3rd.tar.gz /tmp/